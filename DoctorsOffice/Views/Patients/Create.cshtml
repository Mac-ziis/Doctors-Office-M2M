@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Patient

    <h4>Add a new patient</h4>

    <p>@Html.ValidationMessageFor(model => model.DoctorId, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
    <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)

      @Html.LabelFor(model => model.BirthDate)
      @Html.TextBoxFor(model => model.BirthDate)

      @Html.LabelFor(model => model.Doctor)
      @Html.DropDownList("DoctorId")

      <input type="submit" value="Add new patient" class="btn btn-primary" />
    }
    <p>@Html.ActionLink("Show all patients", "Index")</p> 
 